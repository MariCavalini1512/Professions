@using Professions.Models;
@model IEnumerable<Genre>
    ;

    @{
    ViewData["Title"] = "Gêneros de Profissões";
    }

    <h1> @ViewData["Title"]</h1>


    <p>
        <a asp-action="Create"> Adicionar nova profissão </a>
    </p>

    <a type="button"
       title="Detalhes"
       class=" btn btn-outline-info px-2 py-1 roundede mx-1"
       asp-action="Details"
       asp-route-id="@item.Id">

        <i class="bi bi-list-ul"></i>
    </a>

    <a type="button"
       title="Editar"
       class="btn btn-outline-warning px-2 py-1 roundede mx-1"
       asp=-action ="Edit"
       asp-route-id="@item.Id">
        <i class="bi bi-pencil-fill"></i>

    </a>

    <a type="button"
       title="Excluir"
       class="btn btn-outline-danger px-2 py-1 roundede mx-1"
       asp=-action ="Delete"
       asp-route-id="@item.Id">

        <i class="bi bi-trash-fill"></i>

    </a>

    <table class=" table">
        <thead>
            <tr>
                @*Antes*@
                <th> Nome</th>
                @*Depois*@
                <th>@Html.DisplayNameFor(Model => Model.Name)</th>

            </tr>
        </thead>

        <tbody>
            @foreach (Genre item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>

        }


        </tbody>

    </table>


